<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/" class="site_title"><span>Leave</span></a>
                    </div>
                    <nav>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <img src="/Content/Images/profile.png" alt=""><span>@HttpContext.Current.User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="/account/logoff"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>


                                </ul>
                            </li>

                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main" style="min-height: 1161px;">
                <div class="">


                    <div class="clearfix"></div>

                    <div class="col-md-offset-3 col-md-6 col-sm-offset-1 col-sm-10 col-xs-offset-0 col-xs-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <footer>
            <div class="pull-right">
                Leave Protoype - For Demo
            </div>
            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/knockout.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
